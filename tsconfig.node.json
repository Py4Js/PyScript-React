{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "baseUrl": "./source",
    "rootDir": "./source",
    "outFile": "./library/index",
    "emitDeclarationOnly": true,
    "isolatedModules": false,
    "paths": {
      "~components/*": ["components/*"],
      "~types/*": ["types/*"],
      "~utils/*": ["utils/*"],
      "~scripts/*": ["/*"]
    }
  },
  "include": ["./source", "./global.d.ts"]
}